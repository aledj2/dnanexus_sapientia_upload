{
  "name": "congenica_upload_v1.1",
  "title": "congenica_upload_v1.1",
  "summary": "v1.1 - Upload to Congenica platform",
  "tags": [
  ],
  "properties": {
    "github release": "v1.1"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "vcf",
      "label": "VCF file",
      "help": "VCF to be uploaded",
      "class": "file",
      "patterns": ["*.vcf","*.vcf.gz"],
      "optional": false
    },
    {
      "name": "bam",
      "label": "BAM file",
      "help": "BAM to be uploaded",
      "class": "file",
      "patterns": ["*.bam"],
      "optional": true
    },
    {
      "name": "analysis_name",
      "label": "analysis_name",
      "help": "An optional analysis_name which will be used to name the analysis in congenica.",
      "class": "string",
      "optional": true
    },
    {
      "name": "congenica_project",
      "label": "congenica_project",
      "help": "ID of congenica project to upload samples to, eg 123",
      "class": "string",
      "optional": false
    },
    {
      "name": "credentials",
      "label": "credentials_to_use",
      "help": "Use STG or Viapath credentials for upload",
      "class": "string",
      "choices": [
        "Viapath",
        "STG"
      ],
      "optional": false
    },
    {
      "name": "resume",
      "label": "Resume upload",
      "help": "Resume uploads files to an existing IR, rather than creating a new IR",
      "class": "boolean",
      "optional": false,
      "default": false
    }
  ],
  "outputSpec": [],
  "runSpec": {
    "execDepends": [
    ],
    "distribution" : "Ubuntu",
    "release":"16.04",
    "file": "src/code.sh",
    "interpreter": "bash",
    "assetDepends": [
    ]
  },
  "access": {
    "allProjects":"UPLOAD",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "main": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
